public List<apxio__Student__c> selectUnreachableStudents() {
    List<apxio__Student__c> student = [SELECT Id, Name
                                 FROM apxio__Student__c
                                 WHERE apxio__Active__c IS true
                                 AND apxio__Email__c    IS NULL
                                 AND apxio__Phone__c    IS NULL
                                 ORDER BY Name ASC];
    return student;
}