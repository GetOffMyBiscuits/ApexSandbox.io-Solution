public void enrollStudents(List<String> emails, String className) {
    List<apxio__Offered_Class__c> offClass = new apxio__Student__c();

    apxio__Class__c cls = 
        [SELECT Id, Name
         FROM apxio__Class__c 
         WHERE Name = :className];

    for (Integer i=0; i < emails.size(); i++){
        apxio__Student__c student = 
            [SELECT Id, Name
             FROM apxio__Student__c 
             WHERE apxio__Email__c = :emails[i]];
        
        apxio__Class_Enrollment__c ce = 
            new apxio__Class_Enrollment__c();

        ce.apxio__Student__c = student;
        ce.apxio__Offered_Class__c = cls;

        offClass.add(ce);
    }

    insert offClass;
}